// extend layout
doctype 5
html
  head
    title Todo-List
    script(src="/javascript/lib/json2.js")
    script(src="/javascript/lib/jquery.js")
    script(src="/javascript/lib/jquery.tmpl.js")
    script(src="/javascript/lib/underscore.js")
    script(src="/javascript/lib/backbone.js")
    script(src="/javascript/lib/backbone.localstorage.js")
    script(src="/javascript/todo.js")
    link(href="/css/todo.css", rel="stylesheet")
  body
    #todoapp
      .title
        h1 Todos
      .content
        #create-todo
          input#new-todo(placeholder="what needs to be done?", type="text")
        #todos
          ul#todo-list
        #todo-stats
    include includes/todo_template.html
